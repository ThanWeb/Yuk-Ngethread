{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "cypress/globals": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "cypress"
  ],
  "ignorePatterns": ["**.scss"],
  "rules": {
    "react/jsx-uses-react": "off",
    "react/jsx-indent": ["error", 2],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "jsx-quotes": ["error", "prefer-single"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
